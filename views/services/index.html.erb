<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Service name</th>
      <th>Price</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service_name %></td>
        <td><%= service.price %></td>
        <td><%= service.category_id %></td>
        <td><%= service.user_id %></td>
        <td><%= link_to '구매하기', create_service_path(current_user.id, service.id), method: :post %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

