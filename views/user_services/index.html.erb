<h1>마이페이지</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_services.each do |user_service| %>
      <tr>
        <td><%= user_service.user_id %></td>
        <td><%= user_service.service_id %></td>
        <td><%= link_to 'Show', user_service %></td>
        <td><%= link_to 'Edit', edit_user_service_path(user_service) %></td>
        <td><%= link_to 'Destroy', user_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
